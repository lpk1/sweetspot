<div class="map_img-listing map-fullscreen">
    <div
      id="map"
      style="width: 100vw;
      height: 35vh;
      border-radius: 5px"

      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>

<div class="container">
  <h1>Create your Spot</h1>

  <%= render "form" %>
  <br>
  <%= link_to '<i class="far fa-arrow-alt-circle-left"></i>'.html_safe,  spots_path, style: 'color:#5A5A5A' %>
</div>
