<div class="flex-container">
  <div class="flex-card-item">
    <div class="container">
      <div class="row">
        <% @spots.each do |spot| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: url(<%= cl_image_path spot.photo %>);">
            <div class="card-description">
              <h2> <%= link_to "#{spot.name}", spot_path(spot), {:style=>'color:#FFFFFF'} %></h2>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
  <div class="flex-map-item">
      <div
        id="map"
        style="width: 100%; height: calc(100vh - 120px);"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
  </div>
</div>
