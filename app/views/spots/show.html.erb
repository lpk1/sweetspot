<div class="container">
  <h1><%= @spot.name %></h1>

  <br>

  <% if user_signed_in? %>

  <h3>Current User: <%= current_user.email %></h3>
  <h3>Spot Owner: <%= @spot.user.email %></h3>
  <% else %>
  <h3>Not signed in</h3>
  <% end %>
  <br>
  <br>

    <% if @spot.user == current_user %>
      <h3>Is_Owner 👍🏼</h3>
    <% else %>
      <h3>Not_Owner</h3>
      <h3>Book</h3>
      <%= link_to "Book this Spot", new_spot_spot_booking_path(@spot) %>
    <% end %>

  <% @reviews.each do |review| %>
  <%= review.review_description %>



  <% end %>
  <br>
  <% if @spot.user == current_user %>
  <%= link_to "Delte this spot",  spot_path(@spot), :method => :delete %>
  <% end %>
  <br>
  <br>
  <%= link_to "Go Back",  spots_path %>

</div>
<%#= render "spot_reviews/form"  %>
