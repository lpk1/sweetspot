<div class="container">
  <h1><%= @spot.name %></h1>

  <br>

  <% if user_signed_in? %>

  <h3>Current User: <%= current_user.email %></h3>
  <h3>Spot Owner: <%= @spot.user.email %></h3>
  <% else %>
  <h3>Not signed in</h3>
  <% end %>
  <br>
  <br>

    <% if @spot.user == current_user %>
      <h3>Is_Owner 👍🏼</h3>
    <% else %>
      <h3>Not_Owner</h3>

      <% if @your_bookings.length > 0 %>

        <h3>Your Bookings:</h3>
        <% @your_bookings.each do |booking| %>
          <h3>From the <%= booking.start_date %> until the <%= booking.end_date %></h3>
        <% end %>

      <% else %>

        <h3>Book now!</h3>
        <%= link_to "Book this Spot", new_spot_spot_booking_path(@spot) %>

      <% end %>
    <% end %>

  <% @reviews.each do |review| %>
  <%= review.review_description %>



  <% end %>
  <br>
  <% if @spot.user == current_user %>
  <%= link_to "Delete this spot",  spot_path(@spot), :method => :delete %>
  <% end %>
  <br>
  <br>
  <%= link_to "Go Back",  spots_path %>

  <%= render "shared/listing_card" %>

</div>
<%#= render "spot_reviews/form"  %>
